<%- include('partials/head')%>
<body>
    <%- include('partials/navbar')%>
    <h1> add a product</h1>
    <form action="/products" method="POST">
        <label for="name">Mobile name</label>
        <input type="text" id="name" name="name" placeholder="mobile name">
        <label for="price">Mobile price</label>
        <input type="number" id="price" name="price" placeholder="mobile price">
        <label for="category">Select category</label>
        <select name="category" id="category">
            <% for(let category of categories) {%>
                <option value="<%=category%>"><%=category %> </option>
                <% } %>  
        </select>
        <button>submit</button>
    </form>
    <a href="/products">all mobiles</a>
</body>
</html>